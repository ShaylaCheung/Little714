<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/listview_music_id"
        android:text="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_margin="10dp"
        android:textColor="@color/listview_id"
        android:textStyle="italic|bold"

        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listview_music_id"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/listview_music_name"
            android:text="listview_music_name"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:textSize="18dip"
            android:textStyle="bold"
            android:textColor="@color/listview_music_name"
            android:layout_width="wrap_content"

            />
        <TextView
            android:id="@+id/listview_singer_name"
            android:text="listview_singer_name"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/listview_singer_name"
            android:textSize="16dip"

            />
    </LinearLayout>
    <ImageView
        android:id="@+id/listview_image"
        android:paddingTop="12dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/listview_goto"
        android:scaleType="center"
        android:paddingBottom="10dp"
        android:adjustViewBounds="true"
        android:background="@color/listview_goto"
        />

</RelativeLayout>  