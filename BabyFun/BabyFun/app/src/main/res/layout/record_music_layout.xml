<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.baby.cy.babyfun.Music.RecordMusicActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:background="@drawable/record_bg"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sing For Baby"
        android:textSize="40dp"
        android:padding="50dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/record_music"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/record" />
        <Button
            android:id="@+id/finish_record_music"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:background="@drawable/stop_record" />
    </RelativeLayout>
</RelativeLayout>
